<div class="content-wrapper">
  <section class="content-header">
    <h1>
      Profile
    </h1>
  </section>

<section class="content">
  <div class="row">
    <div class="col-md-3">
      <div class="box box-solid">
        <div class="box-header with-border">
          <h3 class="box-title">Manage</h3>
        </div>
        <div class="box-body no-padding" style="display: block;">
          <ul class="nav nav-pills nav-stacked">
            {{#link-li}}
              {{#link-to 'dashboard.profile.index'}}
                {{fa-icon 'user'}} Edit Profile
              {{/link-to}}
            {{/link-li}}
            {{#link-li}}
              {{#link-to 'dashboard.profile.password'}}
                {{fa-icon 'key'}} Change Password
              {{/link-to}}
            {{/link-li}}
            {{#link-li}}
              {{#link-to 'dashboard.profile.subscriptions'}}
                {{fa-icon 'credit-card'}} Subscriptions
              {{/link-to}}
            {{/link-li}}
            {{#if session.currentUser.isDirector}}
              {{#link-li}}
                {{#link-to 'dashboard.profile.requests'}}
                  {{fa-icon 'user-plus'}} Sent Requests
                {{/link-to}}
              {{/link-li}}
            {{/if}}
            {{#link-li}}
              {{#link-to 'dashboard.profile.received-requests'}}
                {{fa-icon 'users'}} Received Requests
              {{/link-to}}
            {{/link-li}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="box box-primary">
        <div class="box-body">
          {{outlet}}
        </div>
      </div>
    </div>
  </div>
  </section>

</div>
