<div class="content-wrapper" style="min-height: 916px;">
  <section class="content-header">
    <h1>
      Grades
    </h1>
  </section>

  <section class="content">

    <div class="box box-info">

      <div class="box-body">
        <div class="table-responsive">
          <table class="table no-margin">
            <thead>
              <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Score</th>
                <th>Weight</th>
              </tr>
            </thead>
            <tbody>
              {{#each grade in model}}
                <tr>
                  <td>{{grade.name}}</td>
                  <td>{{grade.course.name}}</td>
                  <td><h4>{{grade.score}} <small>/{{grade.scoreTotal}}</small></h4></td>
                  <td><span class="label label-primary">{{grade.weight.name}} {{grade.weight.percentage}}%</span></td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      <div class="box-footer clearfix">
        <a href="javascript::;" class="btn btn-sm btn-default btn-flat pull-right">Create New Grade</a>
      </div>
    </div>

  </section>
</div>
