<div class="row">
  <div class="col-sm-6 col-xs-12">
    <div class="info-box">
      <span class="info-box-icon bg-aqua">{{fa-icon 'pie-chart'}}</span>
      <div class="info-box-content">
        <span class="info-box-text">Average Semester GPA</span>
        <span class="info-box-number">{{averageSemesterGPA}}</span>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-xs-12">
    <div class="info-box">
      <span class="info-box-icon bg-orange">{{fa-icon 'bar-chart'}}</span>
      <div class="info-box-content">
        <span class="info-box-text">Average Cumulative GPA</span>
        <span class="info-box-number">{{averageCumulativeGPA}}</span>
      </div>
    </div>
  </div>
</div>
<div class="box box-default">
  <div class="box-body">
  <div class="table-responsive">
    <table class="table no-margin">
      <thead>
        <tr>
          <th>Name</th>
          <th>Active Semester</th>
          <th># of Courses</th>
          <th>Semester Credit Hours</th>
          <th>Semester GPA</th>
          <th>Cumulative GPA</th>
        </tr>
      </thead>
      <tbody>
        {{#each students as |student|}}
          <tr>
            <td>{{link-to student.name 'dashboard.students.show' student}}</td>
            <td>{{student.activeSemester}}</td>
            <td>{{student.courses.length}}</td>
            <td>{{student.semesterCreditHours}}</td>
            <td>{{student.semesterGpa}}</td>
            <td>{{student.cumulativeGpa}}</td>
          </tr>
        {{else}}
          <tr class='lead'>
            <td colspan='5' class='text-center'>
              No students.
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

