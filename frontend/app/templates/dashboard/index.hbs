<div class="content-wrapper">
  <section class="content-header">
    <h1>
      Dashboard
      <small>Version 1.0</small>
    </h1>
  </section>

  <section class="content">
    <div class="row">
      <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-aqua">
          <div class="inner">
            <h3>{{model.courses.length}}</h3>
            <p>{{h-pluralize model.courses.length "Course" omitCount=true}}</p>
          </div>
          <div class="icon">
            <i class="ion ion-university"></i>
          </div>
          {{#link-to 'dashboard.courses' class='small-box-footer'}}
            More info {{fa-icon 'arrow-circle-right'}}
          {{/link-to}}
        </div>
      </div>
      <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-yellow">
          <div class="inner">
            <h3>{{model.grades.length}}</h3>
            <p>{{h-pluralize model.grades.length "Grade" omitCount=true}}</p>
          </div>
          <div class="icon">
            <i class="ion ion-document"></i>
          </div>
          {{#link-to 'dashboard.grades' class='small-box-footer'}}
            More info {{fa-icon 'arrow-circle-right'}}
          {{/link-to}}
        </div>

      </div>
      <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-green">
          <div class="inner">
            <h3>{{model.semesterGpa}}</h3>
            <p>Semester GPA</p>
          </div>
          <div class="icon">
            <i class="ion ion-pie-graph"></i>
          </div>
          <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
      </div>
      <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-red">
          <div class="inner">
            <h3>3.62</h3>
            <p>Cumulative GPA</p>
          </div>
          <div class="icon">
            <i class="ion ion-stats-bars"></i>
          </div>
          <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">Latest Grades</h3>
            <div class="box-tools pull-right">
              <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
          </div>
          <div class="box-body">
            <div class="table-responsive">
              <table class="table no-margin">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Course</th>
                    <th>Score</th>
                    <th>Weight</th>
                  </tr>
                </thead>
                <tbody>
                  {{!-- Component for each grade row --}}
                </tbody>
              </table>
            </div>
          </div>
          <div class="box-footer clearfix">
            <a href="javascript::;" class="btn btn-sm btn-default btn-flat pull-right">View All Grades</a>
          </div>
        </div>

      </div>
    </div>

  </section>
</div>
