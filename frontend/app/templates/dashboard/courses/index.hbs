<div class="content-wrapper">
  <section class="content-header">
    <h1>
      Courses
    </h1>
  </section>

  <section class="content">

    <div class="box box-info">

      <div class="box-body">
        <div class="table-responsive">
          <table class="table no-margin">
            <thead>
              <tr>
                <th>Name</th>
                <th>Credit Hours</th>
                <th>Grading Scale</th>
                <th>Weights</th>
              </tr>
            </thead>
            <tbody>
              {{#each course in model}}
                <tr>
                  <td>
                    {{!-- {{#link-to 'dashboard.courses.show' course}} --}}
                      {{course.subject}} {{course.number}}
                    {{!-- {{/link-to}} --}}
                  </td>
                  <td>
                    {{course.creditHours}}
                  </td>
                  <td>
                    {{course.gradingScale}}
                  </td>
                  <td>
                    <div class="progress">
                      <div class="progress-bar progress-bar-green" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 30%">
                        <span>30% Assignments</span>
                      </div>
                      <div class="progress-bar progress-bar-red" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 10%">
                        <span>10% Quizzes</span>
                      </div>
                      <div class="progress-bar progress-bar-blue" role="progressbar" aria-valuenow="18" aria-valuemin="0" aria-valuemax="100" style="width: 18%">
                        <span>18% Midterm 1</span>
                      </div>
                      <div class="progress-bar progress-bar-aqua" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                        <span>20% Midterm 2</span>
                      </div>
                      <div class="progress-bar progress-bar-yellow" role="progressbar" aria-valuenow="22" aria-valuemin="0" aria-valuemax="100" style="width: 22%">
                        <span>22% Final Exam</span>
                      </div>
                    </div>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      <div class="box-footer clearfix">
        <a class="btn btn-sm btn-default btn-flat pull-right">Create New Course</a>
      </div>
    </div>

  </section>
</div>
