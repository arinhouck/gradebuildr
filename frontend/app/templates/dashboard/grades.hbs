<div class="content-wrapper">
  <section class="content-header">
    <span class="pull-right">
      {{split-button parent=this selection=selectedSemester filterContent=uniqueSemesters name='Semester'}}
      {{split-button parent=this selection=selectedCourse filterContent=uniqueNames name='Course'}}
      {{#link-to 'dashboard.grades.new' class="btn btn-sm btn-success btn-flat" id="newGrade"}}
        New Grade
      {{/link-to}}
    </span>

    <h1>
      Grades
    </h1>
  </section>

  <section class="content">
    <div class="box box-default">

      <div class="box-body">
        <div class="table-responsive">
          <table class="table no-margin">
            <thead>
              <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Semester</th>
                <th>Score</th>
                <th>Weight</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {{#each grade in pagedContent}}
                {{grade-row parent=this grade=grade}}
              {{else}}
                <tr class='lead'>
                  <td colspan='5' class='text-center'>
                    No grades.
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      <div class="box-footer clearfix">
        <span class='pull-right'>{{page-numbers content=pagedContent}}</span>
      </div>
    </div>

    {{outlet}}

  </section>
</div>
