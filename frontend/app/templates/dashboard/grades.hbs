<div class="content-wrapper">
  <section class="content-header">
    {{#link-to 'dashboard.grades.new' class="btn btn-sm btn-default btn-flat pull-right" id="newGrade"}}
      New Grade
    {{/link-to}}
    <h1>
      Grades
    </h1>
  </section>

  <section class="content">

    <div class="box box-info">

      <div class="box-body">
        <div class="table-responsive">
          <table class="table no-margin">
            <thead>
              <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Score</th>
                <th>Weight</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {{#each grade in pagedContent}}
                {{grade-row grade=grade}}
              {{else}}
                <tr class='lead'>
                  <td colspan='5' class='text-center'>
                    No grades.
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      <div class="box-footer clearfix">
        <span class='pull-right'>{{page-numbers content=pagedContent}}</span>
      </div>
    </div>

    {{outlet}}

  </section>
</div>
