<header class="main-header">
  <nav class="navbar">
    <div class="container">
    <div class="navbar-header">
      {{#link-to "index" class="navbar-brand"}}
        <b>grade</b>buildr
      {{/link-to}}
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
        <i class="fa fa-bars"></i>
      </button>
    </div>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li>
          <a href="#register" {{action 'openModal'}} modal-id="register"> Register </a>
        </li>
        {{#if session.isAuthenticated}}
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            {{session.name}}
          </a>
          <ul class="dropdown-menu">
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <a href="./profile.html" class="btn btn-default btn-flat">Profile</a>
              </div>
              <div class="pull-right">
                <button {{action 'invalidateSession'}} class="btn btn-default btn-flat">Log out</button>
              </div>
            </li>
          </ul>
        </li>
        {{else}}
        <li class="dropdown user user-menu">
          {{#link-to "login" class="dropdown-toggle"}}
            <span>Login</span>
            {{!-- Login Partial --}}
          {{/link-to}}
        </li>
        {{/if}}
      </ul>
    </div>

    </div>
  </nav>
</header>

{{#em-modal-form open-if=openModal configName="bs" id="register" on-submit="register" in-async=async}}
    {{#em-modal-title}}
        {{#em-modal-toggler class="close"}}<span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>{{/em-modal-toggler}}
        <h4 class="modal-title">Register</h4>
    {{/em-modal-title}}
    {{#em-modal-body}}
        {{#if async}}
            Submitting, please wait...
        {{else}}
            <label for="title">Testing</label>
        {{/if}}
    {{/em-modal-body}}
    {{#em-modal-footer}}
        <button type="submit" class="btn btn-primary btn-flat" {{bind-attr disabled=async}}>Submit</button>
    {{/em-modal-footer}}
{{/em-modal-form}}
