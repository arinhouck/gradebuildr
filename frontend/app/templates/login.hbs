{{#if session.isAuthenticated}}
  <li class="dropdown user user-menu">
    <a {{action 'toggleMenu' }} href="#" class="dropdown-toggle">
      Welcome, {{session.content.secure.name}}
    </a>
    <ul class="dropdown-menu">
      <li class="user-footer">
        <div class="pull-left">
          <button href="#" class="btn btn-default btn-flat">Profile</button>
        </div>
        <div class="pull-right">
          <button {{action 'invalidateSession'}} class="btn btn-default btn-flat">Log out</button>
        </div>
      </li>
    </ul>
  </li>
{{else}}
  <li>
    <a href="#register" id="register" {{action 'openModal'}} modal-id="registerModal"> Register </a>
  </li>
  <li class="dropdown user user-menu">
    <a {{action "toggleMenu" }} href="#login" class="dropdown-toggle">
      <span>Login</span>
    </a>
      <ul class="dropdown-menu">
          <li class="user-body">
            {{loginErrorMessage}}
            <form {{action "authenticate" on="submit"}}>
            <div class="form-group">
              <label for="identification">Email address</label><br />
              {{input value=identification placeholder="Email address" type="text" name="email" class="form-control"}}
            </div>
            <div class="form-group">
              <label for="password">Password</label><br />
              {{input value=password placeholder="Password" type="password" name="password" class="form-control"}}
            </div>
            <div class="form-group">
              <div class="pull-left">
                <button {{action 'toggleMenu'}} class="btn btn-default btn-flat" id="cancel">Cancel</button>
              </div>
              <div class="pull-right">
                <button type="submit" class="btn btn-default btn-flat" id="login">Log in</button>
              </div>
            </div>
            </form>
          </li>
      </ul>
  </li>
{{/if}}
