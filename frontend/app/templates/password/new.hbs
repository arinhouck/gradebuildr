<section class="content">
  <div class="container">
    <h2> Forgot your Password? </h2>
    <div class="row">
      <div class="form-group col-sm-6">
        <label for="email">Email address</label>
        {{input value=email type='email' class='form-control' id="email" placeholder='Enter email' required='true'}}
      </div>
    </div>


    <div class="form-group">
      <button type="button" name="button" class="btn btn-primary btn-flat" {{action 'newPassword'}}>Send me reset password instructions</button>
    </div>
  </div>
</section>
